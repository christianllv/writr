{
  "name": "writr",
  "version": "1.9.1",
  "description": "A Simple to Use Markdown Blog",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/jaredwray/writr.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "keywords": [
    "static-site-generator",
    "static-site",
    "ssg",
    "documentation",
    "website",
    "blog",
    "templates",
    "generator",
    "framework",
    "writr",
    "writer",
    "html",
    "markdown",
    "handlebars"
  ],
  "scripts": {
    "watch": "tsc -w -p .",
    "clean-all": "npm run clean && rm -rf node_modules && rm -rf coverage && rm -rf package-lock.json && rm -rf ./test/output",
    "clean": "rm -rf ./dist && npm run clean-output",
    "clean-output": "rm -rf ./blog_output",
    "compile": "npm run clean && tsc -p .",
    "build": "npm run test && npm run compile",
    "test": "npm run clean-output && jest --coverage && npm run clean-output",
    "test-output": "npm run compile && node ./bin/writr -p ./blog_example"
  },
  "bin": {
    "writr": "./bin/writr"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "axios": "^0.27.2",
    "browser-sync": "^2.27.10",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^9.4.0",
    "ecto": "^2.1.2",
    "feed": "^4.2.2",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "helper-date": "^1.0.1",
    "inquirer": "^8.2.4",
    "keyv": "^4.5.0",
    "luxon": "^3.0.4",
    "node-html-markdown": "^1.2.0",
    "parse-json": "^6.0.2",
    "striptags": "^3.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/array-sort": "^1.0.0",
    "@types/browser-sync": "^2.26.3",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^29.0.3",
    "@types/keyv": "^3.1.4",
    "@types/luxon": "^3.0.1",
    "@types/node": "^18.7.13",
    "@types/parse-json": "^4.0.0",
    "jest": "^29.0.3",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "files": [
    "dist",
    "bin",
    "init"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
